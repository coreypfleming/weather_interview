<%= form_with url: weather_results_path, class: 'form-inline mt-4', method: :get do |form| %>
  <div class="form-group row mx-sm-3 mb-2">
    <%= form.label :zipcode, "Zipcode:",  class: "col-sm-2 col-form-label" %>
    <div class="col-sm-8">
      <%= form.text_field :zipcode, class: "form-control" %>
    </div>
    <div class="col-sm-2">
      <%= form.submit "Search", class: "btn btn-primary mb-2" %>
    </div>
  </div>
<% end %>